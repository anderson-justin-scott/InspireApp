
<nav class="navbar navbar-inverse">
    <div class="container-fluid">

        <div id="myNavbar">
            <h2 id="header">Sign up for our mailing list:</h2>
        </div>
    </div>
</nav>

<div class="container-fluid text-center">
    <div class="row content">
        <div class="col-sm-2 sidenav">
            <form>
                <a href="javascript:navigateHome();">Home</a> |
                <a href="javascript:navigateForm();">Email Me</a>
            </form>
            <p id="welcome">Enter your contact info into this form to start receiving inspirational quotes emailed to you directly!</p>
        </div>

        <form name="userForm" class="form-horizontal" method="post" action="/inspire/emailme" novalidate>
            <div id="name-row" class="form-group row">
                <label class="col-form-label">Name: 
                    <p><input type="text" class="form-control" name="fname" ng-model="contact.fname" ng-pattern="regexName" required placeholder="First name"></p>
                    <p ng-show="userForm.fname.$invalid && !userForm.fname.$pristine" class="help-block">Ensure your first name is entered correctly.</p>
                    <input type="text" class="form-control" name="lname" ng-model="contact.lname" ng-pattern="regexName" required placeholder="Last name">
                    <p ng-show="userForm.lname.$invalid && !userForm.lname.$pristine" class="help-block">Ensure your last name is entered correctly.</p>
                </label>
            </div>
            <div class="form-group row">
                <label class="col-form-label">Email: 
                <input class="form-control" type="email" name="email" ng-model="contact.email" required placeholder="user@company.com">
                <p ng-show="userForm.email.$invalid && !userForm.email.$pristine" class="help-block">Enter a valid email.</p>
            </label>
            </div>
            <div class="form-group row">
                <label class="col-form-label">Receive tweets from: 
                <p><input type="text" class="form-control" name="tweet1" ng-model="contact.tweet1" ng-pattern="regexTweet" required placeholder="Twitter Handle only" list="handles"></p>
                <p><input type="text" class="form-control" name="tweet2" ng-model="contact.tweet2" ng-pattern="regexTweet" placeholder="Twitter Handle only" list="handles"></p>
                <p><input type="text" class="form-control" name="tweet3" ng-model="contact.tweet3" ng-pattern="regexTweet" placeholder="Twitter Handle only" list="handles"></p>
                <p ng-show="userForm.tweet1.$invalid && !userForm.tweet1.$pristine" class="help-block">Enter a valid twitter handle.</p>
                <p ng-show="userForm.tweet2.$invalid && !userForm.tweet2.$pristine" class="help-block">Enter a valid twitter handle.</p>
                <p ng-show="userForm.tweet3.$invalid && !userForm.tweet3.$pristine" class="help-block">Enter a valid twitter handle.</p>
                </label>
            </div>

            <datalist id="handles">
                <option value="realDonaldTrump">
                <option value="elonmusk">
                <option value="katyperry">
                <option value="justinbieber">
                <option value="BarackObama">
                <option value="taylorswift13">
                <option value="TheEllenShow">
                <option value="KingJames">
                <option value="BillGates">
                <option value="danieltosh">
                <option value="Motivational">
            </datalist>


            <div class="form-check">
                <label>Background:      </label>
                </br>
                <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="background" ng-model="contact.background" id="optionsRadios1" value="Motivational" checked>
                        Inspirational Background
                    </label>
            </div>
            <div class="form-check">
                <label class="form-check-label">        
                        <input type="radio" class="form-check-input" name="background" ng-model="contact.background" id="optionsRadios2" value="Demotivational">
                        Demotivational Background
                    </label>
            </div>
            </br>
            <p><button class="btn btn-primary" type="submit" ng-disabled="userForm.$invalid">Submit</button></p>
        </form>
    </div>
</div>
